{
  "description": "Linksmart Historical Datastore",
  "dnssdEnabled": false,
  "serviceID": "",
  "http": {
    "publicEndpoint": "http://public-endpoint",
    "bindAddr": "0.0.0.0",
    "bindPort": 8085
  },
  "grpc": {
    "enabled": true,
    "bindAddr": "0.0.0.0",
    "bindPort": 8088
  },
  "registry": {
    "backend": {
      "type": "leveldb",
      "dsn": "./hds/registry"
    }
  },
  "data": {
    "backend": {
      "type": "sqlite",
      "dsn": "./hds/data.db?cache=shared"
    },
    "autoRegistration": false
  },
  "serviceCatalog": {},
  "auth": {},
  "pki": {
	"caCert":"pki/caCert.pem",
	"caKey": "pki/caKey.pem",
	"serverCert": "pki/serverCert.pem",
	"serverKey": "pki/serverKey.pem",
	"certData":{
		"country": "DE",
		"province": "NRW",
		"locality": "SA",
		"organization": "example",
		"organizationalUnit": "EXDEP",
		"commonName": "*.example.com",
		"dnsNames":"example.com:8088",
		"ipAddresses": "127.0.0.1"
	}
  }
}
