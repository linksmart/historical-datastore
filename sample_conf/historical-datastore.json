{
  "description": "Linksmart Historical Datastore",
  "dnssdEnabled": false,
  "serviceID": "",
  "http": {
    "publicEndpoint": "http://public-endpoint",
    "bindAddr": "0.0.0.0",
    "bindPort": 8085
  },
  "registry": {
    "backend": {
      "type": "leveldb",
      "dsn": "./hds/registry"
    },
    "retentionPeriods": ["1h", "1w"]
  },
  "data": {
    "backend": {
      "type": "sqlite",
      "dsn": "./hds/data.db"
    },
    "autoRegistration": false
  },
  "serviceCatalog": {},
  "auth": {}
}
