{
  "description": "Linksmart Historical Datastore",
  "dnssdEnabled": false,
  "serviceID": "",
  "http": {
    "publicEndpoint": "http://public-endpoint",
    "bindAddr": "0.0.0.0",
    "bindPort": 8085
  },
  "grpc": {
    "enabled": false,
    "bindAddr": "0.0.0.0",
    "bindPort": 8088
  },
  "registry": {
    "backend": {
      "type": "leveldb",
      "dsn": "./hds/registry"
    }
  },
  "data": {
    "backend": {
      "type": "sqlite",
      "dsn": "./hds/data.db?cache=shared"
    },
    "autoRegistration": false
  },
  "serviceCatalog": {},
  "auth": {},
  "pki": {
	"caCert":"",
	"serverCert": "",
	"serverKey": ""
  },
  "sync": {
    "destination": "localhost:8095",
    "syncInterval": "1m"
  }
}
