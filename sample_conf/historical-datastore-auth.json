{
  "description": "Linksmart Historical Datastore",
  "dnssdEnabled": false,
  "serviceID": "",
  "http": {
    "publicEndpoint": "http://public-endpoint",
    "bindAddr": "0.0.0.0",
    "bindPort": 8085
  },
  "registry": {
    "backend": {
      "type": "leveldb",
      "dsn": "./hds/registry"
    },
    "retentionPeriods": ["1h", "1w"]
  },
  "data": {
    "backend": {
      "type": "sqlite",
      "dsn": "./hds/data.db"
    },
    "autoRegistration": false
  },
  "serviceCatalog": {
    "discover": false,
    "endpoint": "http://localhost:8082",
    "ttl": 60,
    "auth": {
      "provider": "keycloak",
      "providerURL": "http://example.com/kc",
      "username": "",
      "password": "",
      "serviceID": ""
    }
  },
  "auth": {
    "enabled": true,
    "provider": "keycloak",
    "providerURL": "http://example.com/kc",
    "clientID": "",
    "basicEnabled": false,
    "authorization": {
      "rules": [
        {
          "resources": ["/data","/registry","/aggregation"],
          "methods": ["GET","POST","PUT","DELETE"],
          "users": [],
          "groups": ["rwusers"]
        }
      ]
    }
  }
}
