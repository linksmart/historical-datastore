{
  "description": "Linksmart Historical Datastore",
  "dnssdEnabled": false,
  "serviceID": "",
  "http": {
    "publicEndpoint": "http://public-endpoint",
    "bindAddr": "0.0.0.0",
    "bindPort": 8085
  },
  "grpc": {
    "enabled": false,
    "bindAddr": "0.0.0.0",
    "bindPort": 8088
  },
  "registry": {
    "backend": {
      "type": "leveldb",
      "dsn": "./hds/registry"
    }
  },
  "data": {
    "backend": {
      "type": "sqlite",
      "dsn": "./hds/data.db?cache=shared"
    },
    "autoRegistration": false
  },
  "serviceCatalog": {
    "discover": false,
    "endpoint": "http://localhost:8082",
    "ttl": 60,
    "auth": {
      "enabled": true,
      "provider": "keycloak",
      "providerURL": "http://example.com/kc",
      "username": "",
      "password": "",
      "serviceID": ""
    }
  },
  "auth": {
    "enabled": true,
    "provider": "keycloak",
    "providerURL": "http://example.com/kc",
    "clientID": "",
    "basicEnabled": false,
    "authorization": {
      "rules": [
        {
          "paths": ["/data","/registry","/aggregation"],
          "methods": ["GET","POST","PUT","DELETE"],
          "users": [],
          "groups": ["rwusers"],
          "roles": [],
          "clients": [],
          "excludePathSubstrings": []
        },
        {
          "paths": ["/data","/registry"],
          "methods": ["GET"],
          "users": [],
          "groups": ["anonymous"],
          "roles": [],
          "clients": [],
          "excludePathSubstrings": []
        }
      ]
    }
  },
  "pki": {
    "caCert":"pki/caCert.pem",
    "serverCert": "pki/serverCert.pem",
    "serverKey": "pki/serverKey.pem"
  },
  "sync": {
    "enabled": true,
    "destination": "localhost:8095",
    "syncInterval": "1m"
  }
}
